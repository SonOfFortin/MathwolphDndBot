<Window x:Class="MathwolphDndBot.MainWindow" Closing="closingForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathwolphDndBot" 
        xmlns:extensions="clr-namespace:MathwolphDndBot.Core"
        xmlns:viewmodel="clr-namespace:MathwolphDndBot.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    
    <DockPanel Background="#1e1e1e" 
               Margin="7">
        <Border Height="28" 
                Background="#252525" 
                DockPanel.Dock="Top">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"
                              Command="{Binding MoveWindowCommand}"/>
            </Border.InputBindings>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="MathWolph DND Bot Chat" 
                           Grid.Column="0"
                           Foreground="LightGray"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="100,0,0,0"/>
                
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0, 0, 4, 0">
                    <Button Content="-"
                            Command="{Binding MinimizeWindowCommand}"
                            Padding="0,0,0,2"/>
                    <Button Content="□"
                            Command="{Binding MaximizeWindowCommand}"
                            Padding="0,0,0,3"/>
                    <Button Content="x"
                            Command="{Binding ShutdownWindowCommand}"
                            Padding="0,0,0,2"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Width="48"
                HorizontalAlignment="Left"
                Background="#252525">
            <Border.Style>
                <Style>
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Border.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Width)"
                                                         To="120"
                                                         Duration="0:0:.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Border.MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Width)"
                                                         To="48"
                                                         Duration="0:0:.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel>
                <RadioButton Content="VPN"
                             extensions:Extensions.Icon="&#128737;"
                             Padding="7.6,3.5,8,0"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             IsChecked="True"
                             Command="{Binding ShowProtectionView}" 
                             Margin="6, 7"/>

                <RadioButton Content="Utilisateur"
                             extensions:Extensions.Icon="&#xf234;"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             Command=""
                             Margin="6"/>

                <RadioButton Content="Message"
                             extensions:Extensions.Icon="&#xf4ad;"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             Command=""
                             Margin="6"/>

                <RadioButton Content="Console"
                             extensions:Extensions.Icon="&#xf120;"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             Command="{Binding ShowConsoleView}"
                             Margin="6"/>

                <RadioButton Content="Settings"
                             extensions:Extensions.Icon="&#xf013;"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             Command="{Binding ShowSettingsView}"
                             Margin="6"/>
            </StackPanel>
        </Border>

        <ContentPresenter Content="{Binding CurrentView}"/>

